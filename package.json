{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Base react app with boilerplate",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist/** && webpack --config ./build_config/webpack.production.config.js --progress -p",
    "dev": "webpack-dev-server --config ./build_config/webpack.development.config.js",
    "docs:build": "documentation build ./src/**/*.js -f md > docs/api.md",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint",
    "precommit": "npm run lint && npm run flow",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthewglover/react-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matthewglover/react-boilerplate/issues"
  },
  "homepage": "https://github.com/matthewglover/react-boilerplate#readme",
  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.2",
    "react-router": "^4.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-observable": "^0.13.0",
    "rxjs": "^5.0.3"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "css-loader": "^0.26.1",
    "documentation": "^4.0.0-beta.18",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.38.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^18.1.0",
    "nyc": "^10.1.2",
    "postcss-loader": "^1.2.2",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file_mock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  }
}
